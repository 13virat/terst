<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="1551dp"
                    android:layout_height="706dp"
                    android:layout_marginTop="-400dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/test2" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="221dp"
                    android:layout_height="221dp"
                    android:layout_marginEnd="-10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:srcCompat="@drawable/log" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login To Your \nAccount"
                    android:layout_marginStart="32dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="33sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.247" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Email"
                android:textSize="18sp"
                android:textColor="#2f3363"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Your Email"
                android:textColor="#a2a4b5"
                android:padding="8dp"
                android:textSize="16dp"/>
            <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Password"
            android:textSize="18sp"
            android:textColor="#2f3363"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"/>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Your Password"
                android:textColor="#a2a4b5"
                android:padding="8dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget Password"
                android:textAlignment="textEnd"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="64dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="57dp"
                    android:layout_height="63dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/google" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_weight="1"

                    tools:srcCompat="@drawable/twitter" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="Log in"
                android:drawableEnd="@drawable/circle"
                android:background="@drawable/bg1"
                android:paddingStart="64dp"
                android:padding="4dp"
                style="android:style/widget.button"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                style="android:style/widget.button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg5"
                android:padding="4dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Dont have an account? Register"
                android:textColor="#ffffff"
                android:textSize="16sp"
                 android:textStyle="normal"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>